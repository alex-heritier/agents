{
  "standard": "opencode",
  "tools": {
    "claude": {
      "guidelines": {
        "file": "CLAUDE.md",
        "dir": "",
        "global": ["~/.claude/CLAUDE.md", "~/.claude/rules/"]
      },
      "commands": {
        "file": "commands.md",
        "dir": ".claude/commands",
        "global": ["~/.claude/commands/*.md"]
      },
      "skills": {
        "file": "SKILL.md",
        "dir": ".claude/skills",
        "global": ["~/.claude/skills"]
      }
    },
    "cursor": {
      "guidelines": {
        "file": "agents.md",
        "dir": ".cursor/rules",
        "global": []
      },
      "commands": {
        "file": "commands.md",
        "dir": ".cursor/commands",
        "global": ["~/.cursor/commands/*.md"]
      }
    },
    "codex": {
      "guidelines": {
        "file": "AGENTS.md",
        "dir": "",
        "global": ["~/.codex/AGENTS.md"]
      },
      "skills": {
        "file": "SKILL.md",
        "dir": ".codex/skills",
        "global": ["~/.codex/skills"]
      }
    },
    "copilot": {
      "guidelines": {
        "file": "CLAUDE.md",
        "dir": "",
        "global": []
      }
    },
    "gemini": {
      "guidelines": {
        "file": "GEMINI.md",
        "dir": "",
        "global": ["~/.gemini/GEMINI.md"]
      },
      "commands": {
        "file": "*.toml",
        "dir": ".gemini/commands",
        "global": ["~/.gemini/commands/*.toml"]
      }
    },
    "opencode": {
      "guidelines": {
        "file": "AGENTS.md",
        "dir": "",
        "global": ["~/.opencode/AGENTS.md", "~/.config/opencode/AGENTS.md"]
      },
      "commands": {
        "file": "*.md",
        "dir": ".opencode/command",
        "global": ["~/.opencode/command/*.md", "~/.config/opencode/command/*.md"]
      },
      "skills": {
        "file": "SKILL.md",
        "dir": ".opencode/skill",
        "global": ["~/.opencode/skill", "~/.config/opencode/skill"]
      }
    },
    "qwen": {
      "guidelines": {
        "file": "QWEN.md",
        "dir": "",
        "global": []
      }
    },
    "amp": {
      "guidelines": {
        "file": "AGENTS.md",
        "dir": "",
        "global": ["~/.config/amp/AGENTS.md", "~/.config/AGENTS.md"]
      },
      "commands": {
        "file": "*",
        "dir": ".agents/commands",
        "global": ["~/.config/amp/commands/*"]
      }
    }
  }
}
